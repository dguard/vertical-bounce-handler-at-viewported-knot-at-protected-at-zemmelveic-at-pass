{
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "esModuleInterop": true,
    "incremental": true,
    "paths": {
      "@core-lib/*": ["src/*"],
    }
  },
  "exclude": ["node_modules", "dist"]
}
